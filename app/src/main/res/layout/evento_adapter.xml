<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewImagemEvento"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="Imagem do evento" />

    <TextView
        android:id="@+id/textViewNomeEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Nome do evento"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDescricaoEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Descrição do evento"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewNomeEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome da empresa do evento"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDataEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data do evento"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHoraEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hora do evento"
        android:textColor="@android:color/holo_green_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <include layout="@layout/divisor" />

</LinearLayout>